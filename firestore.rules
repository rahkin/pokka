rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /usernames/{address} {
      // Allow read access to all users
      allow read: if true;
      
      // Allow write only if:
      // 1. The document doesn't exist (new username)
      // 2. The user owns the document (updating their username)
      // 3. The username field is required and follows the format
      allow write: if (
        !exists(/databases/$(database)/documents/usernames/$(address)) ||
        request.auth != null && request.auth.uid == address
      ) && 
      request.resource.data.username is string &&
      request.resource.data.username.size() >= 3 &&
      request.resource.data.username.size() <= 20 &&
      request.resource.data.username.matches('^[a-zA-Z0-9_]+$')
    }
  }
} 